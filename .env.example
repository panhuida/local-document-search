# 数据库连接 (请修改为您的实际配置)
DATABASE_URL=postgresql://user:password@localhost:5432/document_search

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=a-very-secret-and-long-random-string-for-security

# 文件类型配置（逗号分隔，不区分大小写）
NATIVE_MARKDOWN_TYPES=md
PLAIN_TEXT_TO_MARKDOWN_TYPES=txt
CODE_TO_MARKDOWN_TYPES=sql,py,sh
LOG_TO_MARKDOWN_TYPES=log
STRUCTURED_TO_MARKDOWN_TYPES=pdf,docx,xlsx,pptx,html,doc,xls,ppt,htm
SUPPORTED_FILE_TYPES=md,pdf,docx,xlsx,pptx,html,sql,py,sh

# --- Logging Configuration ---
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_BACKUP_COUNT=30 # Number of backup log files to keep for TimedRotatingFileHandler

# Joplin API 配置
JOPLIN_API_TOKEN=your_joplin_api_token_here
# Joplin API URL (optional, defaults to http://localhost:41184)
JOPLIN_API_URL=http://localhost:41184

# Path to download WeChat articles
DOWNLOAD_PATH=E:\documents\文摘\公众号
